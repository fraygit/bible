<script type="text/javascript">
    $(function () {
        $.each($(".date-convert-to-local"), function (idx, itm) {
            var localDate = $(itm).data("date");
            if (moment(localDate).isValid()) {
                $(itm).text(moment.utc(localDate).local().format("MMM D YYYY  hh:mm A"));
            }
        });
    })
</script>

<script type="text/javascript">
    $("#frmRegister").submit(function () {

        var isValid = true;

        if (isValid) {

            var registerData = {
                Email: $("#txtEmail").val(),
                Password: $("#txtPassword").val(),
                FirstName: $("#txtFirstName").val(),
                LastName: $("#txtLastName").val()
            }

            if (isBlank(registerData.Email) || isBlank(registerData.Password) || isBlank($("#txtRePassword").val()) || isBlank(registerData.FirstName) || isBlank(registerData.LastName)) {
                $("#lblRegisterError").html("Please fill all fields.");
                $("#pnlRegisterError").slideDown("slow");
            }
            else {
                $("#pnlRegisterError").slideUp("slow");
                if ($("#txtRePassword").val() == registerData.Password) {

                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("RegisterUser", "Login")",
                        contentType: "application/json",
                        dataType: "json",
                        data: JSON.stringify(registerData),
                        success: function (d) {
                            if (d.IsSuccess == true) {
                                $("#lblRegisterSuccess").html("Successfully registered! Please check your email to activate your account.");
                                $("#pnlRegisterSuccess").slideDown("slow");
                                $("#frmRegister")[0].reset();
                                setTimeout(function () {
                                    document.location.href = "/login";
                                }, 4000);
                            }
                            else {
                                $("#lblRegisterError").html('Error registering user, ' + d.Message);
                                $("#pnlRegisterError").slideDown("slow");
                            }
                        },
                        error: function (xhr, textStatus, errorThrown) {
                            $("#lblRegisterError").html("System error.");
                            $("#pnlRegisterError").slideDown("slow");
                        }
                    });


                }
                else {
                    $("#lblRegisterError").html("Password does not match.");
                    $("#pnlRegisterError").slideDown("slow");
                }
            }
        }
    });
</script>

