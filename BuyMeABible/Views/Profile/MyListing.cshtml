@model List<BuyMeABible.Data.Model.Book>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h2>
                    My Listing
                    <small>Basic example without any additional modification classes</small>
                </h2>
            </div>

            <div class="card-body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>Title</th>
                            <th>Created</th>
                            <th>Expires</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var book in Model)
                        {
                        <tr>
                            <td><a href="@Url.Action("Edit", "Book", new { bookId = book.Id.ToString() })"><i class="fa fa-pencil"></i></a></td>
                            <td><a href="@Url.Action("View", "Book", new { bookId = book.Id.ToString() })"><b>@book.Title</b></a></td>
                            <td><span class="date-convert-to-local" data-date="@book.DateCreated"></span></td>
                            <td><span class="date-convert-to-local" data-date="@book.Expires"></span></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
